<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/new_font"
            android:text="수"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/hello2"></TextView>

        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/hello2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toLeftOf="@id/hello3"
            android:fontFamily="@font/new_font"
            android:text="학문제를 풀고"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/hello3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/new_font"
            android:text="포"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/hello4"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hello3"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/new_font"
            android:text="인트를 받는"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/hello5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hello4"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/new_font"
            android:text="자"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_below="@id/hello"
            android:layout_width="300dp"
            android:layout_centerInParent="true"
            android:layout_height="300dp"
            android:src="@drawable/app_logo"
            android:id="@+id/logo"
            android:layout_marginTop="50dp"></ImageView>

        <Button
            android:id="@+id/startbutton"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:padding="10dp"
            android:background="@drawable/button_design"
            android:text="Start"
            android:textSize="20sp"
            android:elevation="5dp"></Button>


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bannerad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="FULL_BANNER"
            ads:adUnitId="ca-app-pub-4544671315865800/8295224890" />


    </RelativeLayout>


</LinearLayout>