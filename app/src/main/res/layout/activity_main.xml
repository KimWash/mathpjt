<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/backgroundcolor">

        <RelativeLayout
            android:id="@+id/box"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:background="@drawable/edge"></ImageView>

            <ImageView
                android:id="@+id/mainheart1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/mainheart2"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/mainheart1"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/mainheart3"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/mainheart2"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/mainheart4"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/mainheart3"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/mainheart5"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-2dp"
                android:layout_toLeftOf="@id/mainheart4"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageButton
                android:id="@+id/heartplus"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8sp"
                android:layout_marginRight="10dp"
                android:src="@drawable/plusbutton"></ImageButton>
        </RelativeLayout>


        <ImageView
            android:id="@+id/sheep"
            android:layout_width="470dp"
            android:layout_height="500dp"
            android:layout_centerVertical="true"
            android:src="@drawable/sheep" />

        <TextView
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sheep"
            android:text="ID :"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/nickname"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sheep"
            android:layout_centerHorizontal="true"
            android:text="nickname"
            android:textColor="#000000"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ID"
            android:text="Point :"
            android:layout_toLeftOf="@+id/point2"
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickname"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:text="point"
            android:textColor="#000000"
            android:textSize="28dp" />

        <Button
            android:id="@+id/settingbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15sp"
            android:layout_marginRight="14sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settingbutton"
            android:padding="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
            <ImageButton
                android:id="@+id/solve"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/problem"
                android:text="문제"
                android:textSize="25dp" />


            <ImageButton
                android:layout_toRightOf="@+id/solve"
                android:id="@+id/store"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/store"
                android:text="상점"
                android:textSize="25dp" />
        <ImageButton
            android:layout_centerHorizontal="true"
            android:id="@+id/gohome"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="68dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:elevation="4dp"
            android:ems="5"
            android:paddingTop="42dp"
            android:paddingBottom="42dp"
            android:src="@drawable/gohome"
            android:text="상점"
            android:textSize="25dp" />

            <ImageButton
                android:id="@+id/ranking"
                android:layout_toLeftOf="@+id/learn"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:layout_centerVertical="true"
                android:src="@drawable/rank"
                android:text="랭킹"
                android:textSize="25dp" />


            <ImageButton
                android:id="@+id/learn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:layout_centerVertical="true"
                android:paddingBottom="42dp"
                android:src="@drawable/learn"
                android:text="배우기"
                android:textSize="25dp" />


    </RelativeLayout>


</LinearLayout>