<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/backgroundcolor">

        <RelativeLayout
            android:id="@+id/box"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:background="@drawable/box"></ImageView>

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/heart1"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/heart2"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/heart4"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/heart3"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageView
                android:id="@+id/heart5"
                android:layout_width="50dp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-2dp"
                android:layout_toLeftOf="@id/heart4"
                android:src="@drawable/ic_functions_black_24dp" />

            <ImageButton
                android:id="@+id/heartplus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_24px"></ImageButton>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:padding="10sp"
            android:text="수"
            android:textSize="50dp"
            android:layout_toLeftOf="@+id/letter2"
            android:fontFamily="@font/new_font"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/letter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:padding="10sp"
            android:text="포"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:letterSpacing="1.0"
            android:fontFamily="@font/new_font"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:padding="10sp"
            android:text="자"
            android:textSize="50dp"
            android:layout_toRightOf="@+id/letter2"
            android:letterSpacing="1.0"
            android:fontFamily="@font/new_font"
            android:textStyle="bold" />


        <Button
            android:id="@+id/settingbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15sp"
            android:layout_marginRight="14sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settingbutton"
            android:padding="15dp"></Button>

        <ImageView
            android:layout_width="420dp"
            android:layout_height="420dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/app_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button

            android:id="@+id/solve"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_design2"
            android:text="문제 풀러 가기" />

        <Button
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/solve"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_design2"
            android:text="상점" />

        <TextView
            android:id="@+id/point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/store"
            android:text="My Point :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="194dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/store"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bannerad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="FULL_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />


    </RelativeLayout>


</LinearLayout>