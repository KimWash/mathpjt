<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/new_font"
            android:text="수"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/hello2" />

        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/hello2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toLeftOf="@id/hello3"
            android:fontFamily="@font/new_font"
            android:text="학문제를 풀고"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/hello3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/new_font"
            android:text="포"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/hello4"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hello3"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/new_font"
            android:text="인트를 받는"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/hello5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hello4"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/new_font"
            android:text="자"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_below="@id/hello"
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            android:layout_height="200dp"
            android:src="@drawable/app_logo"
            android:id="@+id/logo"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/resister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_font"
            android:padding="7dp"
            android:text="가입하기"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_below="@id/logo"></Button>
        <Button
            android:id="@+id/signbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_font"
            android:padding="7dp"
            android:text="로그인하기"
            android:textColor="#000000"
            android:textSize="25dp"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/resister"
            android:layout_marginTop="30dp"
            ></Button>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/sheep"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>

</LinearLayout>
