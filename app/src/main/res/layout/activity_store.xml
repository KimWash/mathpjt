<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/colorAccent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상점"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/storeletter"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캐릭터 샵"
            android:textSize="35dp"
            android:layout_below="@id/storeletter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="30dp"
            android:id="@+id/chshopbutton"
            android:paddingBottom="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리어리티 샵"
            android:textSize="35dp"
            android:layout_below="@id/chshopbutton"
            android:id="@+id/realshopbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"/>





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/solve"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/problem"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/store"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/store"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintEnd_toStartOf="@+id/gohome"
                ads:layout_constraintStart_toEndOf="@+id/solve"
                ads:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/gohome"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/gohome"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintEnd_toStartOf="@+id/ranking"
                ads:layout_constraintStart_toEndOf="@+id/store"
                ads:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ranking"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/rank"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintEnd_toStartOf="@+id/learn"
                ads:layout_constraintStart_toEndOf="@+id/gohome"
                ads:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/learn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:ems="5"
                android:paddingTop="42dp"
                android:paddingBottom="42dp"
                android:src="@drawable/learn"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintRight_toRightOf="parent"
                ads:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>





</LinearLayout>