<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:text="환영합니다"
        android:textSize="55sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="수포자에 오신 것을 환영합니다"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkInvalid"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:ems="15"
        android:hint="ID"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textCursorDrawable="@color/Darkbar">

    </EditText>

    <Button
        android:id="@+id/checkInvalid"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_above="@+id/email"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:text="중복확인" />

    <TextView
        android:id="@+id/howgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/checkInvalid"
        android:text="Grade"
        android:textSize="20sp"
        android:textStyle="italic" />


    <Spinner
        android:id="@+id/grade"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_below="@+id/username"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/checkInvalid" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:ems="15"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textCursorDrawable="@color/Darkbar" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textCursorDrawable="@color/Darkbar" />

    <EditText
        android:id="@+id/password_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@android:dimen/app_icon_size"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:ems="15"
        android:hint="Password Retype"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textCursorDrawable="@color/Darkbar" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_chk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:ems="19"
        android:onClick="submitButton"
        android:text="Sign In" />

</RelativeLayout>
